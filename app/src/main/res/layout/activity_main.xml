<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.northwindlabs.kartikeya.socialmedialogin.MainActivity">

    <RelativeLayout
        android:layout_centerInParent="true"
        android:layout_height="wrap_content"
        android:layout_width="match_parent">

        <ImageView
            android:id="@+id/linkedin_login"
            android:layout_width="190dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="8dp"
            android:src="@drawable/linkedin_login"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"/>

        <ImageView
            android:src="@drawable/facebook_login"
            android:id="@+id/facebook_login"
            android:layout_width="144dp"
            android:layout_height="40dp"
            android:layout_below="@id/linkedin_login"
            android:layout_centerHorizontal="true"/>

        <com.google.android.gms.common.SignInButton
            android:id="@+id/google_login"
            android:layout_width="153dp"
            android:layout_height="44dp"
            android:layout_marginTop="4dp"
            android:layout_gravity="center"
            android:layout_below="@id/facebook_login"
            android:layout_centerHorizontal="true"/>

        <ImageView
            android:src="@drawable/twitter_login"
            android:id="@+id/twitter_login"
            android:layout_width="158dp"
            android:layout_height="39dp"
            android:layout_marginTop="10dp"
            android:layout_below="@id/google_login"
            android:layout_centerHorizontal="true"/>

    </RelativeLayout>

    <ImageView
        android:layout_marginTop="10dp"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/imgProfile"
        android:layout_centerInParent="true"/>

    <TextView
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtDetails"/>

    <Button
        android:id="@+id/btnLogout"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="Logout"
        android:textColor="@android:color/white"
        android:background="#0278B5"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:layout_marginBottom="16dp"/>
</RelativeLayout>
